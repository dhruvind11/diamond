    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "types": ["node", "express"],   // ðŸ‘ˆ this line is important
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*"]
